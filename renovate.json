{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "enabled": false
  },
  "packageRules": [
    {
      "matchManagers": [
        "helm-release"
      ],
      "groupName": "Flux Helm Releases"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/.*/helm-release.yaml$/"
      ],
      "matchStrings": [
        "chart:\\s*\\n(?:[\\s\\S]*?name:\\s*(?<depName>\\S+)[\\s\\S]*?version:\\s*(?<currentValue>\\S+))"
      ],
      "depNameTemplate": "{{depName}}",
      "currentValueTemplate": "{{currentValue}}",
      "datasourceTemplate": "helm"
    }
  ]
}
