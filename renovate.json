{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "flux",
    "helmv3"
  ],
  "flux": {
    "managerFilePatterns": [
      "/(^|/)infrastructure/.*\\.ya?ml$/",
      "/(^|/)clusters/.*\\.ya?ml$/",
      "/(^|/)templates/.*\\.ya?ml$/"
    ]
  },
  "ignorePaths": [
    "templates/**"
  ]
}
